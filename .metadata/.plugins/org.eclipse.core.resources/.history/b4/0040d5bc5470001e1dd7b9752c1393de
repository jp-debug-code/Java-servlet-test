package controller;

import java.io.IOException;
import java.text.SimpleDateFormat;
import java.util.Date;

import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import dao.ShainDAO;
import model.ShainLogic;

/**
 * Servlet implementation class update
 */
@WebServlet("/update")
public class update extends HttpServlet {
	private static final long serialVersionUID = 1L;
       
    /**
     * @see HttpServlet#HttpServlet()
     */
    public update() {
        super();
        // TODO Auto-generated constructor stub
    }

	/**
	 * @see HttpServlet#doGet(HttpServletRequest request, HttpServletResponse response)
	 */
	protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		request.setCharacterEncoding("UTF-8");
		response.setCharacterEncoding("UTF-8");
		response.setContentType("text/html;charset=UTF-8");
		String id=request.getParameter("id");
		String name=request.getParameter("name");
		String retire_flg= request.getParameter("retire_flg");
		String sqlDate_str=request.getParameter("sqlDate");
		String bu_id=request.getParameter("bu_id");
		System.out.println("id:" + id);
		System.out.println("id:" + name);
		System.out.println("id:" + sqlDate_str);
		System.out.println("id:" + bu_id);
		ShainDAO shaindao =new ShainDAO();
		ShainLogic shainlogic = new ShainLogic();
		try {
		 SimpleDateFormat dateformat =new SimpleDateFormat("yyy-MM-dd");
		 Date sqlDate =dateformat.parse(sqlDate_str);
			shaindao.getInsert(id, name, sqlDate,retire_flg, bu_id);
		
		
		} catch (Exception e) {
			
			e.printStackTrace();
		}
		
		request.getRequestDispatcher("/WEB-INF/update.jsp").forward(request, response);}

	/**
	 * @see HttpServlet#doPost(HttpServletRequest request, HttpServletResponse response)
	 */
	protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		// TODO Auto-generated method stub
		doGet(request, response);
	}

}
